<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/app"
    		  android:layout_width="fill_parent" android:layout_height="fill_parent" 
    		  android:orientation="vertical" android:background="#ffffff">
	<LinearLayout android:id="@+id/tabBar" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:background="#FFF">
		<ImageView android:id="@+id/BtnSlide" android:layout_width="wrap_content" android:layout_height="wrap_content"
            		android:layout_alignParentLeft="true" android:background="@drawable/header_1"/>
        <ImageView android:id="@+id/BtnBlue" android:layout_width="wrap_content" android:layout_height="wrap_content"
            	   android:layout_alignParentRight="true"  android:background="@drawable/header_2"/>    			
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
				  android:id="@+id/rightnavigation"/>
</LinearLayout>
